<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/diary_book_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:contentDescription="@string/diary_iamge_description"/>
	<TextView 
	    android:id="@+id/diary_book_item_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dip"
	    android:gravity="center_horizontal"
	    />
	<ImageView
	    android:id="@+id/diary_book_item_image_go"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="40dip"
	    android:src="@drawable/diary_book_item_image_go"
	    ></ImageView>"
    
</LinearLayout>
